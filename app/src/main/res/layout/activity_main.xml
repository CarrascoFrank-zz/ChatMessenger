<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" tools:context=".activity.MainActivity"
    android:orientation="vertical">


    <include
        android:id="@+id/toolbar_principal_id"
        layout="@layout/toolbar"/>

    <com.android.chatmessenger.chatmessenger.helper.SlidingTabLayout
        android:id="@+id/stl_tabs_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/colorPrimary">

    </com.android.chatmessenger.chatmessenger.helper.SlidingTabLayout>

    <android.support.v4.view.ViewPager android:id="@+id/vp_pagina_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/toolbar_principal_id" />

</LinearLayout>